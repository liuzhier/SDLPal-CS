                                <Label Grid.Column="0">店铺</Label>
                                <ComboBox Grid.Column="1">
                                    <ComboBoxItem>2121</ComboBoxItem>
                                </ComboBox>
                            </Grid>
                            <Grid Grid.Row="2" ColumnDefinitions="1*, 2.5*" Height="36">
                                <Label Grid.Column="0">商品1</Label>
                                <TextBox Grid.Column="1"></TextBox>
                            </Grid>
                            <Grid Grid.Row="3" ColumnDefinitions="1*, 2.5*" Height="36">
