<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="PalDebugTools.MainWindow"
        Title="PalDebugTools"
        Width="600" Height="NaN" CanResize="False" ShowInTaskbar="False"
        MinWidth="0" MinHeight="0" CanMinimize="False"
        WindowStartupLocation="CenterScreen" SystemDecorations="BorderOnly">
    <Window.Styles>
        <Style Selector="Window">
            <Setter Property="Foreground" Value="DeepPink" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="Padding" Value="0" />
        </Style>
        <Style Selector="TabItem">
            <Setter Property="Foreground" Value="Purple" />
            <Setter Property="Margin" Value="-5" />
        </Style>
        <Style Selector="Border">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="Pink" />
        </Style>
        <Style Selector="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="Padding" Value="3, 3, 3, 0" />
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="Padding" Value="3, 0, 3, 0" />
            <Setter Property="Margin" Value="0, 2, 0, 0" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </Window.Styles>
    <Grid RowDefinitions="9*, .1*, 80">
        <ScrollViewer Grid.Row="0">
            <TabControl TabStripPlacement="Left">
                <TabItem Header="Shop">
                    <TabItem.Styles>
                        <Style Selector="TextBox">
                            <Setter Property="IsReadOnly" Value="True" />
                        </Style>
                    </TabItem.Styles>
                    <Border>
